[colors]
; Cores do pywal
background = ${xrdb:color0:#2E3440}
background-alt = ${xrdb:color8:#3B4252}
foreground = ${xrdb:color7:#D8DEE9}
primary = ${xrdb:color1:#5F9EA0}    ; Cor prim√°ria do pywal (geralmente vermelho)
accent = ${xrdb:color4:#00BFFF}     ; Cor de destaque do pywal (geralmente azul)
alert = ${xrdb:color3:#BF616A}      ; Cor de alerta do pywal (geralmente amarelo)

; Cores de fallback (caso o pywal n√£o esteja configurado)
;background = #2E3440
;background-alt = #3B4252
;foreground = #D8DEE9
;primary = #5F9EA0
;accent = #00BFFF
;alert = #BF616A

[bar/main]
width = 100%
height = 27
radius = 0
fixed-center = true
module-margin-left = 2
module-margin-right = 2

background = ${colors.background}
foreground = ${colors.foreground}
primary = ${colors.primary}
accent = ${colors.accent}

font-0 = "Noto Sans:size=10;2"
font-1 = "Symbols Nerd Font:size=12;3"

modules-left = workspaces
modules-center = date
modules-right = lock updates i3-helper network battery volume logout reboot shutdown

[module/workspaces]
type = internal/i3
pin-workspaces = false
enable-scroll = false

label-focused = %index%
label-focused-backgro12und = ${colors.primary}
label-focused-underline = ${colors.accent}
label-focused-padding = 2

label-unfocused = %index%
label-unfocused-padding = 1

label-visible = ""
label-urgent = ""

; Mostrar apenas 2 workspaces ativos
index-sort = true
wsp = 2

[module/date]
type = internal/date
interval = 1

date = %d %b
time = %H:%M

label = %date% ÔÄó %time%

[module/updates]
type = custom/script
exec = ~/.config/polybar/updates-check.sh
interval = 5
click-left = ~/.config/polybar/updates-install.sh
click-right = ~/.config/polybar/updates-check.sh check
format-padding = 1

[module/i3-helper]
type = custom/text
content = Û∞ãΩ i3 help
content-foreground = ${colors.accent}
click-left = bash ~/.config/polybar/i3-helper.sh
content-padding = 1

[module/network]
type = custom/script
interval = 5
exec = ~/.config/polybar/network.sh
click-left = nm-connection-editor &

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98

format-charged = <label-charged>
format-charging = <label-charging>
format-discharging = <label-discharging>

label-charged = Ôá¶ %percentage%%
label-charging = Ôá¶ %percentage%%
label-discharging = ÔâÄ %percentage%%

[module/volume]
type = internal/pulseaudio

format-volume = <label-volume>
label-volume = ÔÄÅ %percentage%%
label-muted = ÔÄ¶ muted


[module/logout]
type = custom/text
content = " Ôãµ "
content-foreground = ${colors.accent}
click-left = ~/.config/polybar/logout.sh
background = ${colors.background}

[module/reboot]
type = custom/text
content = " ÔÄû "
content-foreground = ${colors.accent}
click-left = ~/.config/polybar/reboot.sh
background = ${colors.background}

[module/shutdown]
type = custom/text
content = " ÔÄë "
content-foreground = ${colors.accent}
click-left = ~/.config/polybar/shutdown.sh
background = ${colors.background}

[module/lock]
type=custom/text
content=" üîí "
content-foreground =${colors.accent}
click-left = ~/.config/polybar/lock.sh
background= ${colors.background}}

